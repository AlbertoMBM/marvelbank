<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/emailCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/radius_size_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_padding_size_very_xsmall">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/emailImage"
            android:layout_width="@dimen/email_image_size"
            android:layout_height="@dimen/email_image_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/margin_padding_size_xsmall"
            android:src="@drawable/ic_baseline_email_24"
            app:tint="@color/colorPrimary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textEmail"
            style="@style/TextTitleCharacter.18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:layout_marginHorizontal="@dimen/margin_padding_size_xsmall"
            app:layout_constraintTop_toTopOf="@+id/emailImage"
            app:layout_constraintBottom_toBottomOf="@+id/emailImage"
            app:layout_constraintStart_toEndOf="@+id/emailImage"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

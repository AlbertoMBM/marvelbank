<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marvelDarkGray"
    tools:context=".ui.contact.ContactMeFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contact"
        style="@style/TextTitleCharacter.24.White"
        android:layout_width="@dimen/margin_padding_size_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_size_xsmall"
        android:layout_marginTop="@dimen/margin_padding_size_xxxlarge"
        android:layout_marginEnd="@dimen/margin_padding_size_xsmall"
        android:textSize="20sp"
        android:text="@string/contact_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/email"
        layout="@layout/card_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_size_xmedium"
        android:layout_marginHorizontal="@dimen/margin_padding_size_xmedium"
        app:layout_constraintTop_toBottomOf="@+id/contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- SPLASH THEME -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    
    <style name="TextTitleCharacter">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="TextTitleCharacter.16">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextTitleCharacter.18">
        <item name="android:textSize">@dimen/text_size_xmedium</item>
    </style>

    <style name="TextTitleCharacter.18.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTitleCharacter.20">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextTitleCharacter.24">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="TextTitleCharacter.24.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTitleCharacter.28">
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
    </style>

    <style name="TextTitleCharacter.28.Red">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextDescriptionCharacter">
        <item name="android:textColor">@color/marvelDarkGray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>